doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Ofertas de Empleo FullStack
    link(rel="stylesheet" href="/css/style.css")
    link(href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet")
    script(src="https://kit.fontawesome.com/27f702310a.js" crossorigin="anonymous")

  body
    header
      #titulo
        a(href="/")
          img#logoEmpresa(src="imgs/logoRomian.png" alt="Logo de la empresa")
        h4#tituloFavs Tu perfil
      if islogged
        if isadmin
          include menuAdmin.pug
          #saludo
            p(data-email=`${email}`) Hola #{email}
        else
          include menuUsuario.pug
          #saludo
            p(data-email=`${email}`) Hola #{email}
      else
        include menuStandart.pug

    main
      #ofertasUsuario
        h1 PERFIL
        #cardOferta 
          #cardPerfil
            h2 Bienvenide a tu perfil
            h3 Nombre de usuario
            p  @rodolfoElMaquina
            h3 Correo
            p rodirodi@user.com
            h3 Nombre
            p Daniel
            h3 Apellido
            p Gonzalez
            h3 Imagen
            img(src="https://images.ctfassets.net/h6goo9gw1hh6/2sNZtFAWOdP1lmQ33VwRN3/e40b6ea6361a1abe28f32e7910f63b66/1-intro-photo-final.jpg?w=1200&h=992&fl=progressive&q=70&fm=jpg" alt="Imagen de perfil")


    script(src="script/script.js")