doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Ofertas de Empleo FullStack
    link(rel="stylesheet" href="/css/style.css")
    link(href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet")

  body
    header
      #titulo
        img#logoEmpresa(src="imgs/logoRomian.png" alt="Logo de la empresa")
        h4#tituloFavs Usuarios
      #divHamburguesa
        button#abrir.abrir-menu
      #nav
        ul#ulNav
          h3 Men√∫
          li
            a(href="./") Home

    main
      #tituloUsuarios
        h3 Lista de usuarios registrados
      #ejemploUsuarios
        table
          thead
            tr
              th Usuario
              th Email
              th Borrar_Usuario
          tbody
          each user in Users
            tr
              td #{user.username}
              td #{user.email}
              td 
                button(id="deleteUserBtn" onclick=`deleteUser('${user.email}')`) Eliminar usuario
    footer
      p Footer

    script(src="script/script.js")
